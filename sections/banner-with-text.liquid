<div class="banner-text-section custom-page-width"
  style="
    background-image: url('{{ section.settings.bg_image | image_url }}');
    background-color: {{section.settings.bg_color}};
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  "
>

  <div class="banner-overlay"
    style="
        background-color: {{ section.settings.overlay_color }};
        opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};
        display: block;
    "
  ></div>

  <div class="banner-text-inner banner-text-inner--{{ section.settings.text_align | default: 'center' }}">
    <div class="page-width">
      {% if section.settings.main_label != blank %}
        <div class="label-title" style="font-size: {{ section.settings.main_label_size }}px; color: {{ section.settings.main_label_color }}; letter-spacing: 2px;">
          {{ section.settings.main_label }}
        </div>
      {% endif %}

      <div class="main-title" style="font-size: {{ section.settings.main_title_size }}px; color: {{ section.settings.main_title_color }}; font-weight: 400; line-height: 1; font-family: 'Playfair Display', serif;">
        {{ section.settings.main_title }}
      </div>

      {% if section.blocks.size > 0 %}
        <div class="banner-items-row" style="gap: {{ section.settings.items_gap }}px; {% if section.settings.enable_blocks_border %} border-top: .5px solid #eaeaea; border-bottom: .5px solid #eaeaea; {% endif %}">
          {% for block in section.blocks %}
            <div class="banner-item banner-item--{{ block.id }} banner-item-align-{{ block.settings.item_text_align | default: 'center' }}">
              <div class="item-label" style="font-size: {{ block.settings.item_label_size }}px; color: {{ block.settings.item_label_color }}; letter-spacing: 1px;">
                {{ block.settings.item_label }}
              </div>

              <div class="item-title" style="font-size: {{ block.settings.item_title_size }}px; color: {{ block.settings.item_title_color }};">
                {{ block.settings.item_title }}
              </div>

              <div class="item-desc" style="font-size: {{ block.settings.item_desc_size }}px; color: {{ block.settings.item_desc_color }}; ">
                {{ block.settings.item_desc }}
              </div>
            </div>

          {% endfor %}
        </div>
      {% endif %}

      {% if section.settings.bottom_title != blank %}
        <div class="bottom-text" style="font-size: {{ section.settings.bottom_title_size }}px; color: {{ section.settings.main_title_color }};">
          {{ section.settings.bottom_title }}
        </div>
      {% endif %}

    </div>
  </div>
</div>

<style>
    @media screen and (min-width: 750px) {
      .banner-text-section {
        height: 100vh;
      }
    }
    
    .banner-text-section {
    position: relative;
    width: 100%;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    overflow: hidden;
    z-index: 0;
    }

    .banner-overlay {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
    pointer-events: none;
    display: block !important;
    }

    .banner-text-inner {
    position: relative;
    z-index: 2;
    max-width: 1200px;
    margin: auto;
    text-align: center;
    }

    .banner-items-row {
    display: flex;
    justify-content: space-between;
    margin-top: 40px;
    flex-wrap: wrap;
    padding-top: 20px;
    padding-bottom: 20px;
    }

    .banner-item {
    flex: 1 1 calc(25% - 20px);
    min-width: 200px;
    display: flex;
    flex-direction: column;
    gap: 0;
    }
    .item-title{
      line-height: 1.2;
      font-weight: bold;
    }
    .item-title p, .item-label p, .item-desc p{ margin: 0;}
    .item-label p{
      width: 52%;
    }
  .main-title p, .bottom-text p{
    margin-top: 0px;
    line-height: 1.1;
  }

  .banner-text-inner--left .label-title,
  .banner-text-inner--left .main-title,
  .banner-text-inner--left .bottom-text {
    text-align: left;
  }

  .banner-text-inner--center .label-title,
  .banner-text-inner--center .main-title,
  .banner-text-inner--center .bottom-text {
    text-align: center;
  }

  .banner-text-inner--right .label-title,
  .banner-text-inner--right .main-title,
  .banner-text-inner--right .bottom-text {
    text-align: right;
  }

  .banner-item-align-left  { text-align: left; }
  .banner-item-align-center{ text-align: center; }
  .banner-item-align-right { text-align: right; }

  @media (max-width: 768px) {
      .label-title  { font-size: {{ section.settings.main_label_size_mobile }}px !important; }
      .main-title   { font-size: {{ section.settings.main_title_size_mobile }}px !important; }
      .bottom-text  { font-size: {{ section.settings.bottom_title_size_mobile }}px !important; }                    

        .item-label { font-size: 12px; }
        .item-title { font-size: 28px; }
        .item-desc  { font-size: 12px; } 
      
      .banner-item {
        flex: 1 1 100%;
        margin-bottom: 24px;
      }  
      .custom-page-width{
          padding: 0 20px;
      }
      .banner-items-row{
          gap: 0px !important;
      }
      .custom-card-bg{
          padding-top: 80% !important;
      }
  }

</style>



{% schema %}
{
  "name": "Custom Banner Text",
  "settings": [
    {
      "type": "image_picker",
      "id": "bg_image",
      "label": "Imagen de fondo"
    },
    {
      "type": "color",
      "id": "overlay_color",
      "label": "Color del overlay",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Color de fondo (aplica si no hay imagen)",
      "default": "#161F3A"
    },    
    {
      "type": "range",
      "id": "overlay_opacity",
      "label": "Opacidad del overlay",
      "min": 0,
      "max": 100,
      "step": 1,
      "default": 60
    },
    {
      "type": "header",
      "content": "Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding superior",
      "min": 0,
      "max": 200,
      "step": 5,
      "default": 100
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding inferior",
      "min": 0,
      "max": 200,
      "step": 5,
      "default": 80
    },
    {
      "type": "header",
      "content": "Texto principal"
    },
    {
      "type": "select",
      "id": "text_align",
      "label": "Alineación textos principales",
      "options": [
        { "value": "left", "label": "Izquierda" },
        { "value": "center", "label": "Centrado" },
        { "value": "right", "label": "Derecha" }
      ],
      "default": "center"
    },
    {
      "type": "richtext",
