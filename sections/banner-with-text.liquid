      "step": 1,
      "default": 18
    },
    {
      "type": "range",
      "id": "main_title_size",
      "label": "Tamaño título (px)",
      "min": 10,
      "max": 80,
      "step": 2,
      "default": 48
    },
    {
      "type": "range",
      "id": "bottom_title_size",
      "label": "Tamaño texto final (px)",
      "min": 10,
      "max": 80,
      "step": 2,
      "default": 24
    },
    {
      "type": "range",
      "id": "main_label_size_mobile",
      "label": "Tamaño encabezado (mobile)",
      "min": 10,
      "max": 40,
      "default": 14
    },
    {
      "type": "range",
      "id": "main_title_size_mobile",
      "label": "Tamaño título principal (mobile)",
