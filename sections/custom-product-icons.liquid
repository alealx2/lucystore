{% comment %}
  Section: Product Icons Row (hasta 6 círculos)
  - Cada círculo es un bloque con imagen + texto
  - Fondo configurable por color o imagen
{% endcomment %}

{%- capture section_bg_style -%}
  background-color: {{ section.settings.bg_color }};
  {% if section.settings.bg_image != blank %}
    background-image: url({{ section.settings.bg_image | image_url: width: 2400 }});
    background-size: cover;
    background-position: center center;
    background-repeat: no-repeat;
  {% endif %}
{%- endcapture -%}

<section
  class="icons-row icons-row-{{ section.id }} section-{{ section.id }}-padding color-{{ section.settings.color_scheme }}"
  style="{{ section_bg_style | strip_newlines }}"
>
  {% if section.settings.heading != blank %}
    <div class="page-width">
      <h2 class="icons-row__title">
        {{ section.settings.heading }}
      </h2>
    </div>
  {% endif %}

  <div class="page-width">
    {% if section.blocks.size > 0 %}
      <ul class="icons-row__grid" role="list">
        {%- for block in section.blocks -%}
          {%- if block.type == 'icon' -%}
            {%- assign icon_image = block.settings.icon_image -%}
            <li class="icons-row__item" {{ block.shopify_attributes }}>
              <div class="icons-row__circle">
                {% if icon_image != blank %}
                  <img
                    class="icons-row__img"
                    src="{{ icon_image | image_url: width: 260 }}"
                    width="{{ icon_image.width }}"
                    height="{{ icon_image.height }}"
                    loading="lazy"
                    alt="{{ block.settings.label | escape }}"
                  >
                {% endif %}
                {% if block.settings.label != blank %}
                  <span class="icons-row__label">
                    {{ block.settings.label }}
                  </span>
                {% endif %}
              </div>
            </li>
          {%- endif -%}
        {%- endfor -%}
      </ul>
    {% endif %}
  </div>

  <style>
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
      border-bottom: 1px solid {{ section.settings.border_color }};
    }

    @media (min-width: 750px) {
      .section-{{ section.id }}-padding {
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
      }
    }

    .icons-row-{{ section.id }} .icons-row__title {
      margin: 0 0 1.5rem 0;
      font-size: {{ section.settings.heading_size }}px;
      line-height: 1.1;
      text-align: {{ section.settings.heading_align }};
    }

    .icons-row-{{ section.id }} .icons-row__grid {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      align-items: center;
      gap: {{ section.settings.gap }}px;
      margin: 0;
      padding: 0;
      list-style: none;
    }

    .icons-row-{{ section.id }} .icons-row__item {
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .icons-row-{{ section.id }} .icons-row__circle {
      width: {{ section.settings.icon_size }}px;
      height: {{ section.settings.icon_size }}px;
      border-radius: 999px;
      border: {{ section.settings.border_width }} solid {{ section.settings.circle_border_color }};
      background: {{ section.settings.bg_circle }};
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      padding: {{ section.settings.padding_inset }}px;
      box-sizing: border-box;
    }

    .icons-row-{{ section.id }} .icons-row__img {
      max-width: 100%;
      max-height: calc(100% - 26px);
      object-fit: contain;
      filter: {% if section.settings.monochrome %}grayscale(1){% else %}none{% endif %};
    }

    .icons-row-{{ section.id }} .icons-row__label {
      display: block;
      margin-top: 8px;
      font-size: 11px;
      letter-spacing: 0.08em;
      text-transform: uppercase;
      text-align: center;
      color: {{ section.settings.label_color }};
      line-height: 1.3;
    }

    @media (max-width: 749px) {
      .icons-row-{{ section.id }} .icons-row__circle {
        width: {{ section.settings.icon_size | times: 0.85 | round: 0 }}px;
        height: {{ section.settings.icon_size | times: 0.85 | round: 0 }}px;
      }
    }
  </style>
</section>

{% schema %}
{
  "name": "Product Icons Row",
  "tag": "section",
  "class": "section product-icons-row",
  "settings": [
    {
      "type": "header",
      "content": "Fondo"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Color de fondo",
      "default": "#f6eee5"
    },
    {
      "type": "image_picker",
      "id": "bg_image",
      "label": "Imagen de fondo"
    },

    {
      "type": "header",
      "content": "Título"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Título de la sección",
      "default": "Titulo"
    },
    {
      "type": "select",
      "id": "heading_align",
      "label": "Alineación del título",
      "options": [
        { "value": "left", "label": "Izquierda" },
        { "value": "center", "label": "Centro" },
        { "value": "right", "label": "Derecha" }
      ],
      "default": "center"
    },
    {
      "type": "range",
      "id": "heading_size",
      "label": "Tamaño del título",
      "min": 14,
      "max": 32,
      "step": 1,
      "unit": "px",
      "default": 18
    },

    {
      "type": "header",
      "content": "Círculos"
    },
    {
      "type": "range",
      "id": "icon_size",
      "min": 80,
      "max": 260,
      "step": 10,
      "unit": "px",
      "label": "Tamaño del círculo",
      "default": 200
    },
    {
      "type": "range",
      "id": "padding_inset",
      "min": 0,
      "max": 30,
      "step": 2,
      "unit": "px",
      "label": "Relleno interno",
      "default": 16
    },
    {
      "type": "range",
      "id": "gap",
      "min": 0,
      "max": 60,
      "step": 2,
      "unit": "px",
      "label": "Espacio entre iconos",
      "default": 40
    },
    {
      "type": "color",
      "id": "bg_circle",
      "label": "Fondo del círculo",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "circle_border_color",
      "label": "Color del borde del círculo",
      "default": "#262626"
    },
    {
      "type": "text",
      "id": "border_width",
      "label": "Grosor del borde (ej. 1px)",
      "default": "1px"
    },
    {
      "type": "color",
      "id": "label_color",
      "label": "Color del texto dentro del círculo",
      "default": "#1e2430"
    },
    {
      "type": "checkbox",
      "id": "monochrome",
      "label": "Forzar escala de grises en iconos",
      "default": false
    },

    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Esquema de color de texto base",
      "default": "scheme-1"
    },

    {
      "type": "header",
      "content": "Borde inferior sección"
    },
    {
      "type": "color",
      "id": "border_color",
      "label": "Color del borde inferior",
      "default": "#d6c9b7"
    },

    {
      "type": "header",
      "content": "Espaciado sección"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding superior",
      "default": 24
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding inferior",
      "default": 24
    }
  ],
  "blocks": [
    {
      "type": "icon",
      "name": "Icon circle",
      "limit": 6,
      "settings": [
        {
          "type": "image_picker",
          "id": "icon_image",
          "label": "Imagen del icono"
        },
        {
          "type": "text",
          "id": "label",
          "label": "Texto dentro del círculo",
          "default": "Limited collections"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Product Icons",
      "category": "Custom",
      "blocks": [
        { "type": "icon" },
        { "type": "icon" },
        { "type": "icon" },
        { "type": "icon" }
      ]
    }
  ]
}
{% endschema %}
